{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:tailwindcss/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": ["*.html"],
            "parser": "@angular-eslint/template-parser"
        }
    ],
    "settings": {
        "tailwindcss": {
            "whitelist": ["attribution", "offcanvas-header", "offcanvas-title", "offcanvas-body"]
        }
    }
}
